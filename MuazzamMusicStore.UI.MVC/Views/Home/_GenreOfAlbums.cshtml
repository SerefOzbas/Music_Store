@foreach (Albumler item in Model)
{
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span title="@item.Title"> @item.Title    @*@item.Title.Substring(0, 2)..*@</span>
            </div>
            <div class="panel-body">
                <div style="width:100%;height:100%;">
                    <img src="@item.AlbumArtUrl" alt="@item.Title" style="width:100%" />
                </div>

                <div style="height:25%;">
                    <div class="col-lg-3">
                        @item.Price
                    </div>
                    <div class="col-lg-3">

                    </div>
                    <div class="col-lg-3">
                        <input type="button" name="name" value="SepeteEkle" class="btn btn-success" onclick="AddToMyCart(@item.ID)" />
                        @*oncklik içine sepete ekle eklenecek ajax ile*@
                    </div>
                </div>
            </div>
        </div>
    </div>
}
