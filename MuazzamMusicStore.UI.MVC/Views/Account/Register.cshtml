
@{
    ViewBag.Title = "Register";
}

@model User

    <div class="col-lg-12">
        <div class="col-lg-6">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3>Kullanıcı Kayıt Ekranı</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                    <fieldset>
                        <p>
                            <label>Kullanıcı Adı:</label>
                            @Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })
                        </p>
                        <p>
                            <label>Şifre:</label>
                            @Html.TextBoxFor(a => a.Password, new { @class = "form-control",type="password" })
                        </p>
                        <p>
                            <label>Ad:</label>
                            @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })
                        </p>
                        <p>
                            <label>Soyad:</label>
                            @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })
                        </p>
                        <p>
                            <label>Telefon:</label>
                            @Html.TextBoxFor(a => a.Phone, new { @class = "form-control" })
                        </p>
                        <p>
                            <label>Adres:</label>
                            @Html.TextBoxFor(a => a.Address, new { @class = "form-control" })
                        </p>
                        <p>
                            <label>Email:</label>
                            @Html.TextBoxFor(a => a.Email, new { @class = "form-control",type="email"  })
                        </p>
                        <p>
                            <label>Doğum Tarihi:</label>
                            @Html.TextBoxFor(a => a.BirthDate, new { @class = "form-control",type="date"  })
                        </p>
                        <p>
                            <input type="submit" name="name" value="Kaydet" class="btn btn-success" />
                        </p>
                    </fieldset>
                    }
                </div>
                <div class="panel-footer">
                    @if (ViewBag.Error!=null)
                    {
                    <span>@ViewBag.Error</span>
                    }
                </div>
            </div>
        </div>
    </div>
